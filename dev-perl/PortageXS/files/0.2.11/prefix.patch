diff --git a/lib/PortageXS.pm b/lib/PortageXS.pm
index fa48bac..ff0a46a 100644
--- a/lib/PortageXS.pm
+++ b/lib/PortageXS.pm
@@ -71,8 +71,8 @@ sub new {
 	$pxs->{'VERSION'}			= $PortageXS::VERSION;
 
